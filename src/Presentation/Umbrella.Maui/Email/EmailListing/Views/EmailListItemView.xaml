<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    x:Name="this"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Umbrella.Maui.Email.EmailListing.Views.EmailListItemView">
    <Border>
        <Grid 
            Padding="10"
            ColumnSpacing="15"
            ColumnDefinitions="Auto, *">
            <!--Email image-->
            <Image
                Grid.Column="0"
                Source="envelope_solid.svg"
                HeightRequest="50" WidthRequest="50"/>
            <Grid 
                Grid.Column="1"
                RowDefinitions="Auto, Auto">
                <Grid 
                    ColumnDefinitions="*, Auto, Auto">
                    <!--Email details-->
                    <VerticalStackLayout 
                        Spacing="5">
                        <Label 
                            FontSize="14" FontAttributes="Bold"
                            Text="{Binding Source={x:Reference this}, Path=EmailMessage.Sender.Value}"/>
                        <Label
                            FontSize="12"
                            MaxLines="2" LineBreakMode="TailTruncation"
                            Text="{Binding Source={x:Reference this}, Path=EmailMessage.Subject.Value}" />
                        <Label
                            FontSize="11"
                            MaxLines="1" LineBreakMode="TailTruncation"
                            Text="{Binding Source={x:Reference this}, Path=EmailMessage.Body.Value}" />
                    </VerticalStackLayout>
                    
                    <!--Email time-->
                    <VerticalStackLayout 
                        Grid.Column="1" Spacing="5">
                        <Label Text="{Binding Source={x:Reference this}, Path=EmailMessage.CreatedAt, StringFormat='{}{0:h:mm tt}'}"/>
                    </VerticalStackLayout>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</ContentView>
